<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <TextView
        android:id="@+id/tv_nomor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id Bimbel"
        android:textSize="32dp"
        tools:ignore="MissingConstraints"/>
    <EditText
        android:id="@+id/et_nomor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_nomor"
        android:hint="12345"/>
    <TextView
        android:id="@+id/tv_emailregis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="32dp"
        app:layout_constraintTop_toBottomOf="@+id/et_nomor"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/et_regisEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_emailregis"
        android:hint="budi.doremi@gmail.com"/>

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="32dp"
        app:layout_constraintTop_toBottomOf="@+id/et_regisEmail"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/et_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_nama"
        android:hint="Budi Doremi"/>

    <TextView
        android:id="@+id/tv_regispassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="32dp"
        app:layout_constraintTop_toBottomOf="@id/et_nama"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/et_regispassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_regispassword"
        android:hint="fasbwasi121"/>

    <TextView
        android:id="@+id/tv_confirmpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textSize="32dp"
        app:layout_constraintTop_toBottomOf="@id/et_regispassword"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/et_confirmpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirmpass"
        android:hint="fasbwasi121"/>

    <Button
        android:id="@+id/btn_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_confirmpass"
        android:text="Register"/>

    <TextView
        android:id="@+id/tv_tologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_regis"
        android:text="Already have an Account? Log in"/>
</androidx.constraintlayout.widget.ConstraintLayout>